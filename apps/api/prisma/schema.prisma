// Esto conecta Prisma con tu base de datos de Docker
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ------------------------------------------
// MODELOS DE DATOS (TABLAS)
// ------------------------------------------

// Tabla de Productos (El Menú)
model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Decimal  @db.Decimal(10, 2) // Ejemplo: 25.50
  image       String?  // URL de la imagen
  category    String   // 'Brasas', 'Bebidas', 'Guarniciones'
  available   Boolean  @default(true)
  createdAt   DateTime @default(now())
  
  // Relación con los detalles de pedido
  orderItems  OrderItem[]
}

// Tabla de Pedidos (La Cabecera de la venta)
model Order {
  id          Int      @id @default(autoincrement())
  customerName String
  customerPhone String?
  total       Decimal  @db.Decimal(10, 2)
  status      String   @default("PENDING") // PENDING, PAID, COMPLETED
  createdAt   DateTime @default(now())
  
  // Relación: Un pedido tiene muchos items
  items       OrderItem[]
}

// Tabla Detalle de Pedido (Qué platos pidió en esa orden)
model OrderItem {
  id        Int     @id @default(autoincrement())
  quantity  Int
  price     Decimal @db.Decimal(10, 2) // Precio al momento de la compra
  
  // Relaciones
  orderId   Int
  order     Order   @relation(fields: [orderId], references: [id])
  
  productId Int
  product   Product @relation(fields: [productId], references: [id])
}